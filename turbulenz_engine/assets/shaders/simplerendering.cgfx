float4 fp_glowmap(FP_GLOWMAP_IN IN) : TZ_OUT_COLOR
{
    return float4(materialColor.xyz * TZ_TEX2D(glow_map, IN.UV).xyz, 1.0);
}

float4 fp_lightmap(FP_LIGHTMAP_IN IN) : TZ_OUT_COLOR
{
    float3 diffuseColor = TZ_TEX2D(diffuse, IN.UV.xy).xyz;
    float3 diffContrib = ((lightingScale * TZ_TEX2D(light_map, IN.UV.zw).xyz) + ambientColor);
    return float4(materialColor.xyz * diffuseColor * diffContrib, 1.0);
}

float4 fp_skybox(FP_SKYBOX_IN IN) : TZ_OUT_COLOR
{
    return TZ_TEXCUBE(env_map, IN.eyeDirection);
}

//
// Techniques
//
technique flat
{
    pass p0
    {
        DepthTestEnable = true;
        DepthFunc       = LEqual;
        DepthMask       = true;
        CullFaceEnable  = true;
        CullFace        = Back;
        BlendEnable     = false;

        VertexProgram   = compile latest vp_flat();
        FragmentProgram = compile latest fp_flat();
    }
}

